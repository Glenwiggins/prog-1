      "cell_type": "code",
      "source": [
        "# Install necessary libraries\n",
        "!pip install alpaca-trade-api pandas numpy\n",
        "\n",
        "# -----------------------------\n",
        "# IMPORTS\n",
        "# -----------------------------\n",
        "import time\n",
        "import pandas as pd\n",
        "from datetime import datetime\n",
        "from alpaca_trade_api.rest import REST, TimeFrame, APIError\n",
        "\n",
        "# -----------------------------\n",
        "# CONFIG\n",
        "# -----------------------------\n",
        "API_KEY = \"PKCYROSNEGSMTXEFXJ66EYVZ42\"\n",
        "SECRET_KEY = \"CGDEFVWFmBWACwopp1fFs9RrGeXWX3yhngFuFW8b6jGd\"\n",
        "BASE_URL = \"https://paper-api.alpaca.markets\"\n",
        "\n",
        "symbols = [\"AAPL\", \"MSFT\", \"TSLA\", \"NVDA\"]  # Add more tickers if you want\n",
        "short_window = 20\n",
        "long_window = 50\n",
        "trade_qty = 1\n",
        "check_interval = 60  # checks every 1 minute\n",
        "\n",
        "api = REST(API_KEY, SECRET_KEY, base_url=BASE_URL)\n",
        "log_file = \"trade_log.csv\"\n",
        "\n",
        "# -----------------------------\n",
        "# CSV SETUP\n",
        "# -----------------------------\n",
        "try:\n",
        "    pd.read_csv(log_file)\n",
        "except FileNotFoundError:\n",
        "    pd.DataFrame(columns=[\"time\", \"symbol\", \"action\", \"price\", \"quantity\", \"profit_loss\", \"total_pl\"]).to_csv(log_file, index=False)\n",
        "\n",
        "# -----------------------------\n",
        "# GLOBALS\n",
        "# -----------------------------\n",
        "last_buy_price = {}\n",
        "total_pl = 0.0\n",
        "\n",
        "# -----------------------------\n",
        "# LOG TRADE FUNCTION\n",
        "# -----------------------------\n",
        "def log_trade(symbol, action, price, qty):\n",
        "    global last_buy_price, total_pl\n",
        "    profit_loss = None\n",
        "\n",
        "    if action == \"BUY\":\n",
        "        last_buy_price[symbol] = price\n",
        "    elif action == \"SELL\" and symbol in last_buy_price:\n",
        "        profit_loss = round((price - last_buy_price[symbol]) * qty, 2)\n",
        "        total_pl += profit_loss\n",
        "        last_buy_price.pop(symbol)\n",
        "\n",
        "    trade = {\n",
        "        \"time\": datetime.now().strftime(\"%Y-%m-%d %H:%M:%S\"),\n",
        "        \"symbol\": symbol,\n",
        "        \"action\": action,\n",
        "        \"price\": price,\n",
        "        \"quantity\": qty,\n",
        "        \"profit_loss\": profit_loss,\n",
        "        \"total_pl\": round(total_pl, 2)\n",
        "    }\n",
        "\n",
        "    df = pd.DataFrame([trade])\n",
        "    df.to_csv(log_file, mode=\"a\", header=False, index=False)\n",
        "    print(f\"🧾 Logged trade: {trade}\")\n",
        "\n",
        "# -----------------------------\n",
        "# GET STOCK DATA\n",
        "# -----------------------------\n",
        "def get_data(symbol):\n",
        "    try:\n",
        "        bars = api.get_bars(symbol, TimeFrame.Minute, limit=long_window + 5)\n",
        "        df = pd.DataFrame([{\"time\": b.t, \"close\": b.c} for b in bars])\n",
        "        return df\n",
        "    except APIError as e:\n",
        "        print(f\"Error fetching {symbol}: {e}\")\n",
        "        return None\n",
        "\n",
        "# -----------------------------\n",
        "# MAIN LOOP\n",
        "# -----------------------------\n",
        "while True:\n",
        "    try:\n",
        "        positions = {p.symbol: p for p in api.list_positions()}\n",
        "\n",
        "        for symbol in symbols:\n",
        "            df = get_data(symbol)\n",
        "            if df is None or len(df) < long_window:\n",
        "                continue\n",
        "\n",
        "            df[\"SMA_short\"] = df[\"close\"].rolling(short_window).mean()\n",
        "            df[\"SMA_long\"] = df[\"close\"].rolling(long_window).mean()\n",
        "\n",
        "            last_short, last_long = df[\"SMA_short\"].iloc[-1], df[\"SMA_long\"].iloc[-1]\n",
        "            prev_short, prev_long = df[\"SMA_short\"].iloc[-2], df[\"SMA_long\"].iloc[-2]\n",
        "            has_position = symbol in positions\n",
        "\n",
        "            # BUY SIGNAL\n",
        "            if prev_short < prev_long and last_short > last_long:\n",
        "                if not has_position:\n",
        "                    api.submit_order(symbol=symbol, qty=trade_qty, side=\"buy\", type=\"market\", time_in_force=\"gtc\")\n",
        "                    log_trade(symbol, \"BUY\", df[\"close\"].iloc[-1], trade_qty)\n",
        "\n",
        "            # SELL SIGNAL\n",
        "            elif prev_short > prev_long and last_short < last_long:\n",
        "                if has_position:\n",
        "                    api.submit_order(symbol=symbol, qty=trade_qty, side=\"sell\", type=\"market\", time_in_force=\"gtc\")\n",
        "                    log_trade(symbol, \"SELL\", df[\"close\"].iloc[-1], trade_qty)\n",
        "\n",
        "        print(\"✅ Cycle complete. Waiting for next check...\\n\")\n",
        "        time.sleep(check_interval)\n",
        "\n",
        "    except Exception as e:\n",
        "        print(f\"⚠️ Error in main loop: {e}\")\n",
        "        time.sleep(60)\n"
      ],
